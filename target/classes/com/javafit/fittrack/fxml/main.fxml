<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPane" prefHeight="700.0" prefWidth="1000.0" styleClass="root" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafit.fittrack.controllers.MainController">
   <left>
      <VBox styleClass="sidebar" spacing="10.0" BorderPane.alignment="CENTER">
         <Label styleClass="header-label" text="FitTrack" />
         <!-- ADDED A LABEL with fx:id to display the welcome message -->
         <Label fx:id="usernameLabel" style="-fx-text-fill: #a0aec0; -fx-padding: 0 0 20 0;" text="Welcome!" />
         <Button onAction="#handleNavHome" text="Home" styleClass="nav-button" />
         <Button onAction="#handleNavHistory" text="History" styleClass="nav-button" />
         <Button onAction="#handleNavProfile" text="Profile" styleClass="nav-button" />
         <VBox VBox.vgrow="ALWAYS" />
         <Button onAction="#handleLogSession" text="Log Session" styleClass="primary-button" />
         <Button onAction="#handleLogout" text="Log Out" styleClass="nav-button" />
      </VBox>
   </left>
</BorderPane>

